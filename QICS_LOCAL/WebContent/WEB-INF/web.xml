<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  	<display-name>QICS</display-name>
	<context-param>
       	<param-name>contextConfigLocation</param-name>
       	<param-value>classpath:/spring/context-*.xml</param-value>
   	</context-param>
   	
   	<filter>
       	<filter-name>encodingFilter</filter-name>
       	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
       	<init-param>
           	<param-name>encoding</param-name>
           	<param-value>utf-8</param-value>
       	</init-param>
   	</filter>
   	
   	<filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:/spring/*-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
	<!--core-configuration-END-->
	
	<error-page>
	    <error-code>400</error-code>
	    <location>/common/error.jsp?code=400</location>
	</error-page>
	<error-page>
	    <error-code>401</error-code>
	   	<location>/common/error.jsp?code=401</location>
	</error-page>
	<error-page>
	    <error-code>403</error-code>
	    <location>/common/error.jsp?code=403</location>
	</error-page>
	<error-page>
	    <error-code>404</error-code>
	    <location>/common/error.jsp?code=404</location>
	</error-page>
	<error-page>
	    <error-code>408</error-code>
	    <location>/common/error.jsp?code=408</location>
	</error-page>
	<error-page>
	    <error-code>500</error-code>
	    <location>/common/error.jsp?code=500</location>
	</error-page>
	<error-page>
	    <error-code>503</error-code>
	    <location>/common/error.jsp?code=503</location>
	</error-page>
	<error-page>
	    <exception-type>java.lang.Exception</exception-type>
	    <location>/common/error.jsp?code=901</location>
	</error-page>
	<error-page>
	    <exception-type>javax.servlet.ServletException</exception-type>
	    <location>/common/error.jsp?code=902</location>
	</error-page>
	<error-page>
  		<exception-type>weblogic.servlet.jsp.CompilationException</exception-type>
  		<location>/common/error.jsp?code=903</location>
  	</error-page>
	<error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/common/error.jsp?code=904</location>
  	</error-page>
	

	<!--Add new configuration here-->
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
</web-app>